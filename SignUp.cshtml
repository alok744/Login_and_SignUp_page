@model Login_Signup_page.Models.Account.ViewModel.LoginSignUpModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <h1 class="text-info">User Registration Form</h1>

            </div>
            <h6 class="text-success text-center">@TempData["sucessMessage"]</h6>
            <form method="post" asp-action="SignUp">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" placeholder="UserName" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Email" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Mobile"></label>
                    <input type="text" asp-for="Mobile" placeholder="Mobile" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" placeholder="Password" class="form-control" autocomplete="off" />     
                </div>
                <div>
                    <label asp-for="Confirm_Password"></label>
                    <input type="text" asp-for="Confirm_Password" placeholder="Confirm_Password" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="IsActive" autocomplete="off" />
                    <label asp-for="IsActive"></label>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="IsRemember" autocomplete="off" />
                    <label asp-for="IsRemember"></label>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Registration" />
                </div>
            </form>

        </div>
    </div>
</div>

